.sell-wrapper
  .header
    = link_to root_path do
      = image_tag "material/logo/logo.png", size: "200x58"
      
  .devise-sessions-wrapper
    .main
      .main_var
        %p アカウントをお持ちでない方はこちら
        .new_registrations
          = link_to new_user_registration_path do
            新規会員登録
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          .field
            %br/
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
          .actions
            = f.submit "ログイン",class: 'btn'

  .footer
    %ul 
      %li
        = link_to "プライバシーポリシー" 
      %li
        = link_to "メルカリ利用規約" 
      %li
        = link_to "特定商取引に関する表記" 
    = link_to "#", class: "footer--logo" do
      = image_tag "material/logo/logo-gray.png", size: "150x44"
    %p &copy; FRIMA, Inc.